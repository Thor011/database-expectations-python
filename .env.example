# Example environment variables for database connections

# PostgreSQL
POSTGRES_CONNECTION=postgresql://user:password@localhost:5432/database

# MySQL
MYSQL_CONNECTION=mysql+pymysql://user:password@localhost:3306/database

# SQL Server
SQLSERVER_CONNECTION=mssql+pyodbc://user:password@localhost:1433/database?driver=ODBC+Driver+17+for+SQL+Server

# Oracle
ORACLE_CONNECTION=oracle+cx_oracle://user:password@localhost:1521/database

# SQLite
SQLITE_CONNECTION=sqlite:///path/to/database.db

# Great Expectations
GX_CONTEXT_ROOT_DIR=./gx

# Validation settings
RAISE_ON_VALIDATION_FAILURE=true
